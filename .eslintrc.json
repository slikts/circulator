{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
      "chrome": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": 0,
        "no-undef": 0,
        "no-unused-vars": "warn",
        "comma-dangle": ["error", "always-multiline"]
    }
}
